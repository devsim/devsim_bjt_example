# get the initial coarse mesh
# create the background mesh
# use the background mesh
gmsh -format 'msh2' -2 bjt.geo
python bjt_refine.py
gmsh -format 'msh2' -2 bjt.geo -bgm ./bjt_bgmesh.pos
python bjt_refine.py
gmsh -format 'msh2' -2 bjt.geo -bgm ./bjt_bgmesh.pos
python bjt_refine.py
gmsh -format 'msh2' -2 bjt.geo -bgm ./bjt_bgmesh.pos
python bjt_refine.py
gmsh -format 'msh2' -2 bjt.geo -bgm ./bjt_bgmesh.pos
python bjt_refine.py

